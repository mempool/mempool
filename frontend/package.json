{
  "name": "mempool-frontend",
  "version": "2.0.0",
  "description": "Bitcoin mempool visualizer and blockchain explorer backend",
  "license": "MIT",
  "homepage": "https://mempool.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mempool/mempool"
  },
